{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\"?>" | safeHTML }}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <url>
    <loc>{{ .Site.BaseURL }}</loc>
  </url>

  {{- range .Site.RegularPages }}
    {{- $rel := .RelPermalink | lower }}
    {{- if not (or (in $rel "/archivo/") (in $rel "/buscar/") (in $rel "/legal/")) }}
      <url>
        <loc>{{ .Permalink }}</loc>
        {{- with .Lastmod }}<lastmod>{{ .Format "2006-01-02" }}</lastmod>{{ end }}
      </url>
    {{- end }}
  {{- end }}
</urlset>
